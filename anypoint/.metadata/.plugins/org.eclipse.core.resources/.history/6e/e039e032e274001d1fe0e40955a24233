#%RAML 1.0
  title: Person Shop
  version: v1
  baseUri: /api
  resourceTypes:
    Collection:
      get:
        responses:
          200:
            body:
              application/json:
                type: <<item>>[]
      post:
        body:
          application/json:
            type: <<item>>
    Member:
      delete:
        responses:
          204:
      put:
        body:
          application/json:
            type: Person

  /persons:
    type: { Collection: { item: Person } }
    
    /filter :
       get:
        queryParameters:
            ageMoreThan: number
            ageLessThan: number
       
    /{id}:
      type : { Member: { item: Person } }
      
  types:
    Person:
      properties:
        id: integer
        firstname : string
        lastname: string
        date_of_birth: date-only
        address: string
        age: integer
      example:
        id: 1
        firstname: souheil
        lastname: benslama
        date_of_birth: 1995-05-04
        address: tunis
        age: 23
  
}